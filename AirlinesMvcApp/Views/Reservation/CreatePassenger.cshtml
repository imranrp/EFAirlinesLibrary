@model EFAirlinesLibrary.Models.ReservationDetail

@{
    ViewData["Title"] = "CreatePassenger";
}

<h1>CreatePassenger</h1>

<h4>ReservationDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePassenger">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PNRNo" class="control-label"></label>
                <input asp-for="PNRNo" class="form-control" />
                <span asp-validation-for="PNRNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerNo" class="control-label"></label>
                <input asp-for="PassengerNo" class="form-control" />
                <span asp-validation-for="PassengerNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <!--<a asp-action="Passengers">Back to List</a>-->
    @Html.ActionLink("Back to List", "Passengers", new { pnr = Model.PNRNo })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
